<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_anchorGravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:id="@+id/textView"
        android:layout_width="411dp"
        android:layout_height="322dp"
        android:layout_margin="@dimen/text_margin"
        android:background="#D6E1A6"
        android:fontFamily="@font/economica_bold"
        android:foregroundGravity="left"
        android:gravity="center"
        android:text="@string/large_text"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:divider="@color/purple_200"
        android:showDividers="middle|beginning|end"
        android:stretchColumns="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow>

            <TextView
                android:id="@+id/textViewExp"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:background="#8BC34A"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Años de experiencia"
                android:textColor="#3F51B5"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ageExp"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:background="#8BC34A"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center|center_vertical"
                android:text="10 años"
                android:textColor="#3F51B5"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>


            <TextView
                android:id="@+id/textViewMotiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#8BC34A"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Motivación"
                android:textColor="#3F51B5"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#8BC34A"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Altisima"
                android:textColor="#3F51B5"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>